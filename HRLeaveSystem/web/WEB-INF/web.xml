<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <jsp-file>/common/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>loginHandle</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>generalMenu</servlet-name>
        <jsp-file>/common/menu.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>headMenu</servlet-name>
        <jsp-file>/common/menu.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>directMenu</servlet-name>
        <jsp-file>/common/menu.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>employeeMenu</servlet-name>
        <jsp-file>/common/menu.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>createRequest</servlet-name>
        <servlet-class>controller.CreateRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createRequestEmployee</servlet-name>
        <servlet-class>controller.CreateRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createRequestDepartmentHead</servlet-name>
        <servlet-class>controller.CreateRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginHandle</servlet-name>
        <url-pattern>/login-handler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>generalMenu</servlet-name>
        <url-pattern>/general_manager/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>headMenu</servlet-name>
        <url-pattern>/department_head/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>directMenu</servlet-name>
        <url-pattern>/direct_manager/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>employeeMenu</servlet-name>
        <url-pattern>/employee/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createRequest</servlet-name>
        <url-pattern>/direct_manager/create_leave_request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createRequestEmployee</servlet-name>
        <url-pattern>/employee/create_leave_request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createRequestDepartmentHead</servlet-name>
        <url-pattern>/department_head/create_leave_request</url-pattern>
    </servlet-mapping>
</web-app>
